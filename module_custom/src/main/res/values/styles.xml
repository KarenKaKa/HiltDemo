<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <declare-styleable name="CodeInputView">
        <attr name="field_count" format="integer" />
        <attr name="field_margin" format="dimension" />
        <attr name="field_width" format="dimension" />
        <attr name="field_height" format="dimension" />
        <attr name="field_background" format="reference" />
        <attr name="field_showKeyboard" format="boolean" />
        <attr name="inputType" format="flags">
            <flag name="text" value="0x00000001" />
            <flag name="number" value="0x00000002" />
            <flag name="password" value="0x00000003" />
            <flag name="numPassword" value="0x00000004" />
        </attr>
    </declare-styleable>
</resources>
